<% if(locals.tree){ %>
<nav class="folder-tree">
  <% tree.map((folder,index)=>{ %> <% if(index===0){ %>

  <a href="/upload/<%=folder.id %>" class="root-folder"
    ><%=user.username %>'s Drive</a
  >
  <% }else{ %>
  <img src="/icons/arrow-right.svg" alt="right arrow" />
  <a href="<%=folder.id %>"><%=folder.folderName %></a>
  <% }}) %>
</nav>
<% } %>
