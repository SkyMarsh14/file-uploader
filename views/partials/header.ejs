<header>
  <div class="logo">
    <img
      src="/icons/database-icon.svg"
      class="icon database"
      alt="Database icon"
    />
    <div class="logo-title">File Uploader</div>
  </div>
  <nav>
    <% if(!locals.user) {%>
    <div class="login-elements">
      <a class="sign-in-link" href="/sign-in">Sign In</a>
      <a class="sign-up-link" href="/sign-up">Sign Up</a>
    </div>
    <% } %> <% if(locals.user){ %>
    <div class="username header">
      <img src="/icons/user.svg" alt="user logo" />
      <p><%=user.username %></p>
    </div>
    <div class="logout">
      <a href="/logout">Logout</a>
      <img src="/icons/logout.svg" alt="Logout icon" />
    </div>
    <% } %>
  </nav>
</header>
